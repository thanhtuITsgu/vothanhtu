<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../../lib/internal/Magento/Framework/View/Layout/etc/page_configuration.xsd">
<update handle="customer_account"/>
    <body>
    <referenceBlock name="page.main.title">
        <action method="setPageTitle">
            <argument translate="true" name="title" xsi:type="string">My Notification Tab</argument>
        </action>
    </referenceBlock>
    <referenceContainer name="content">
        <block class="Magenest\Notification\Block\Notification" name="my_form" template="Magenest_Notification::notification.phtml" cacheable="false">
        </block>
    </referenceContainer>
</body>
</page>
